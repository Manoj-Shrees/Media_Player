<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/AndroidSRC.TextAppearance</item>
        <item name="android:actionMenuTextColor">@color/white_light</item>
        <item name="android:colorBackground">@color/background_holo_light</item>
    </style>

    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#1e1e1e</item>
        <item name="android:selectableItemBackground">@color/selectablecolor</item>
    </style>

    <style name="animateddialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="AndroidSRC.TextAppearance" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="opendialogtheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#a2ffffff</item>
    </style>
</resources>
